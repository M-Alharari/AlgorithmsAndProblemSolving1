#include <iostream>
#include <string>
using namespace std;

string ReadName()
{
    string Name;
    cout << "Please enter your name?" << endl;
    getline(cin, Name);
    return Name;
}

void PrintName(string Name)
{
    cout << "\nYour name is: " << Name << endl;
}


int main()
{
    std::cout << "Hello World!\n\n";

    PrintName(ReadName());
 
    system("pause>0");
    return 0; 
}
